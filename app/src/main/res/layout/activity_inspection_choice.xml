<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InspectionChoice">


    <TextView
        android:id="@+id/inspectVehicleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Inspection"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/inspectionInfoTxt"
        app:layout_constraintEnd_toEndOf="@+id/inspectionInfoTxt"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/inspectionInfoTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/inspectionInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Tap to select inspection"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/inspectDriverChoiceBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectVehicleTxt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/inspectDriverChoiceBtn"
        android:layout_width="241dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Inspect Driver "
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/updateVehicleRecordsChoiceBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionInfoTxt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/updateVehicleRecordsChoiceBtn"
        android:layout_width="241dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Inspect Vehicle"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/accidentSceneChoice"
        app:layout_constraintEnd_toEndOf="@+id/inspectDriverChoiceBtn"
        app:layout_constraintStart_toStartOf="@+id/inspectDriverChoiceBtn"
        app:layout_constraintTop_toBottomOf="@+id/inspectDriverChoiceBtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/accidentSceneChoice"
        android:layout_width="241dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Accident Scene"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/updateVehicleRecordsChoiceBtn"
        app:layout_constraintStart_toStartOf="@+id/updateVehicleRecordsChoiceBtn"
        app:layout_constraintTop_toBottomOf="@+id/updateVehicleRecordsChoiceBtn"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>