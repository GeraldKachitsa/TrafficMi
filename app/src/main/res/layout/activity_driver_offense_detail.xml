<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverOffenseDetail">

    <include
        layout="@layout/toolbar"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:paddingTop="15dp"
        android:textColor="@color/dim_grey"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBoxNoBelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="@color/dim_grey"
        android:text="No belt"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxOverSpeeding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/checkBoxFailingToSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="@color/dim_grey"
        android:text="Failing to Signal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxDIU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNoLicense" />

    <CheckBox
        android:id="@+id/checkBoxDIU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="305dp"
        android:layout_marginRight="305dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="@color/black"
        android:text="DUI"
        android:textColor="@color/dim_grey"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxOverLoading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxFailingToSignal" />

    <CheckBox
        android:id="@+id/checkBoxOverSpeeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="@color/dim_grey"
        android:text="Over-speeding"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxNoLicense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNoBelt" />

    <CheckBox
        android:id="@+id/checkBoxOverLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="250dp"
        android:layout_marginRight="250dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="@color/black"
        android:text="over-loading"
        android:textColor="@color/dim_grey"
        app:layout_constraintBottom_toTopOf="@+id/reportTheftBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDIU" />

    <CheckBox
        android:id="@+id/checkBoxNoLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:layout_marginBottom="8dp"
        android:shadowColor="@color/black"
        android:text="No Licence"
        android:textColor="@color/dim_grey"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxFailingToSignal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOverSpeeding" />

    <Button
        android:id="@+id/reportTheftBtn"
        android:layout_width="382dp"
        android:layout_height="69dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Record"
        app:backgroundTint="@color/dim_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/checkBoxOverLoading"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOverLoading"
        app:layout_constraintVertical_bias="0.661"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>