<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceOfWorkMenu">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_choice_of_work"
        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/driverOffenceBtn"
            android:layout_width="241dp"
            android:layout_height="74dp"
            android:text="Driver Offences"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:backgroundTint="@color/dim_grey"
            app:cornerRadius="50dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_below="@+id/driverOffenceBtn"
            android:id="@+id/accidentSceneBtn"
            android:layout_width="241dp"
            android:layout_height="74dp"
            android:text="Accident Scene"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:backgroundTint="@color/dim_grey"
            app:cornerRadius="50dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_below="@+id/accidentSceneBtn"
            android:id="@+id/reportVehicleTheftBtn"
            android:layout_width="241dp"
            android:layout_height="74dp"
            android:text="Vehicle Theft"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:backgroundTint="@color/dim_grey"
            app:cornerRadius="50dp"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

</RelativeLayout>